<h1 class="display-6">New game</h1>
<ul class="letter-grid row mt-4">
  <% @letters.each do |letter| %>
  <li class="bg-primary border border-black">
    <%= letter %>
  </li>
  <%end%>
</ul>
<div class="row mt-4">
  <form action="/score" method="post" data-turbo="false" autocomplete="off">
    <label for=" word">What is the longest word you can find?</label>
    <div class="input-group my-2">
      <input type="text" class="form-control" name="word" id="word">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'letters', @letters.join() %>
      <input class="btn btn-outline-primary" type="submit" value="Play">
    </div>
  </form>
</div>